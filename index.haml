!!! 5
%html.no-js(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title namepicker
    %link{"rel" => "stylesheet", "href" => "./css/app.css"}
  %body
    #leftdiv
      &nbsp;
    #formdiv
      %form
        Who's volunteering?
        #students
          %input{"type" => "checkbox", "id" => "Ben"}
          // %input{"type" => "radio", "name" => "student", "value" => "ben", "id" => "ben"}
          %label{"for" => "Ben"} Ben
          %br
          %input{"type" => "checkbox", "id" => "Elizabeth"}
          %label{"for" => "Elizabeth"} Elizabeth
          %br
          %input{"type" => "checkbox", "id" => "Garret"}
          %label{"for" => "Garret"} Garret
          %br
          %input{"type" => "checkbox", "id" => "Karina"}
          %label{"for" => "Karina"} Karina 
          %br
          %input{"type" => "checkbox", "id" => "Tracy"}
          %label{"for" => "Tracy"} Tracy
          %br
          %input{"type" => "checkbox", "id" => "William"}
          %label{"for" => "William"} William
        %br
        %input{"type" => "submit", "value" => "Choose!", "id" => "submit"}
        %span.cent
          or
        %input{"type" => "button", "value" => "William vs Garret!", "id" => "willvgarret"}
        %p
          &nbsp;
    #rightdiv
      &nbsp;
      
    %img{"src" => "./images/infinite.gif", "id" => "spinner"}
    %br
    %p
